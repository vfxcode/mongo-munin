#!/usr/bin/env python

## GENERATED FILE - DO NOT EDIT

import urllib2
import sys
import os

try:
    import json
except ImportError:
    import simplejson as json

def extractHostPort():
    basename = os.path.basename(__file__).rsplit('_')[-1]
    host, port = basename.split(':')
    return (host, port)

def getServerStatus():
    host, port = extractHostPort()
    url = "http://%s:%s/_status" % (host, port)
    req = urllib2.Request(url)
    raw = urllib2.urlopen(req).read()
    return json.loads( raw )["serverStatus"]


name = "locked"

def doData():
    print name + ".value " + str( 100 * getServerStatus()["globalLock"]["ratio"] )

def doConfig():
    host, port = extractHostPort()

    print "graph_title MongoDB write lock percentage (%s:%s)" % (host, port)
    print "graph_args --base 1000 -l 0 "
    print "graph_vlabel percentage"
    print "graph_category MongoDB"

    print name + ".label " + name






if __name__ == "__main__":
    if len(sys.argv) > 1 and sys.argv[1] == "config":
        doConfig()
    else:
        doData()


